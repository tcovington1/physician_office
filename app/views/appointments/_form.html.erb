<%= render 'layouts/navbar'%>

<h1><%= @appointment.id ? 'Edit Appointment' : 'Create Appointment' %></h1>
<%= form_for [@physician, @appointment] do |f| %>
  <%= f.label :date %>
  <%= f.text_field :date, data:{ provide:'datepicker' } %>

  <%= f.label :time %>
  <%= f.text_field :time %>
 

  <%= f.submit %>
<% end %>