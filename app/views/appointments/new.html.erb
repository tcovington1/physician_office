<h1>Add an Appointment</h1>


<div class="ui form">

    <%= form_for (@physician, @appointment) do |f| %>
      <%= f.label :date %>
      <%= f.text_field :date %>
      <br><br>

      <%= f.label :time %>
      <%= f.text_field :time%>
      <br><br>

      <%= f.submit %>
      <br><br>

<% end %>
</div>
